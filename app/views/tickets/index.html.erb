<h1>Betatech Entertainment<h1>
</div>
<h2 align = 'center'>Forum Posts</h2>


<% @tickets.each do |ticket| %>
    <div style="border: 1px solid black; border-radius: 5px; padding: 30px;">
    <div class = "well">
    <h4><%= ticket.title %> </h4>
    <p><%= ticket.body %> </p>
    <%= link_to "See Thread", ticket_path(ticket), :class => 'btn btn-info' %>
    </div>
    </div>
<% end %>


