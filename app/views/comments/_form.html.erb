<h5>Add Reply</h5>

<%= form_for ([@ticket, @ticket.comments.build]) do |f| %>
    <p>
        <%= f.label :username %> <br>
        <%= f.text_field(:username, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.label :body %> <br>
        <%= f.text_area(:body,{:class => 'form-control'}) %>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>

<% end %>

